<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_following_more_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginStart="@dimen/large_icon_size"
    android:layout_marginEnd="@dimen/normal_margin"
    android:layout_marginBottom="@dimen/normal_margin"
    android:background="@color/colorPrimary_dark"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise_avatar"
    app:cardBackgroundColor="?attr/root_color"
    app:cardCornerRadius="@dimen/material_card_radius"
    app:cardElevation="0dp"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <com.wangdaye.mysplash.common.ui.widget.freedomSizeView.FreedomImageView
            android:id="@+id/item_following_more_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:alpha="0.5"
            tools:background="@color/colorRoot_light" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/item_following_more_title"
                android:textColor="@color/colorTextLight"
                android:textStyle="bold"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_centerVertical="true"
                android:maxLines="1"
                style="@style/subtitle_text"
                tools:text="3 MORE"
                tools:ignore="RtlHardcoded" />

            <com.wangdaye.mysplash.common.ui.widget.CircleImageView
                android:id="@+id/item_following_more_avatar"
                android:layout_width="@dimen/mini_icon_size"
                android:layout_height="@dimen/mini_icon_size"
                android:layout_margin="@dimen/normal_margin"
                android:stateListAnimator="@animator/touch_rise_avatar"
                android:layout_toEndOf="@id/item_following_more_title"
                android:layout_centerVertical="true"
                tools:src="@drawable/default_avatar"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>